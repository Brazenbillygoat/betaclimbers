<!DOCTYPE html>
<html>
<head>
</head>
<body>
<div class="home-body">
<ul>
  <li style="float:right"><a class="active" href="#about">SIGN UP</a></li>
</ul>

<div class="container">
  <%= flash.now[:no_user] %>
  <h2>Login</h2>
  <%= form_tag users_login_path do %>
      <b><%= label_tag :username %></b>
      <%= text_field_tag :username %>
      <b><%= label_tag :password %></b>
      <%= password_field_tag :password %>
      <div class="btn"><%= submit_tag "Login" %></div>
  <% end %>
</div>

</div>
</body>

</html>

