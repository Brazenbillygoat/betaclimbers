<% if @climber.errors %>
  <% @climber.errors.full_messages.each do |error|%>
    <%= error %>
  <% end %>
<% end %>

<center>
<div class="climber-create-bg"> 
    <div class="climber-create-box">
          <h1 style="font-size:40px">"It is not the mountain that we conquer, but ourselves."</h1>
          <br><br>
          <div class="ui form">
          <label>
          <%=form_for @climber do |f| %> 
            <%=f.label :name, "Name: " %><br>
            <%=f.text_field :name%>
            <br><br>
            <%=f.label :experience, "Experience: " %><br>
            <%=f.text_field :experience%> 
            <br><br>
            <%=f.label :birthyear, "Birthyear: "%><br>
            <%=f.number_field :birthyear%> 
            <br><br>
            <%=f.label :height, "Height: "%><br>
            <%=f.text_field :height%> 
            <br><br>
            <%=f.label :weight, "Weight: "%><br>
            <%=f.number_field :weight%> 
            <br><br>
            <%=f.label :origin, "Born In: "%><br>
            <%=f.text_field :origin%> 
            <br><br>
            <%=f.label :preference, "Preference: "%><br>
            <%=f.text_field :preference%>
            <br><br>
            </label>

  <%=f.label :communities, "Community: " %><br><br>
  <%=f.collection_check_boxes(:communities, Community.all, :id,:name) do |b|%>
    <div class="climber-edit-checkbox">
    <%= b.check_box(class: "check_box") + b.text %>
    </div>
  <% end %>
  <br><br>
  <%# f.collection_check_boxes(:communities, Community.all, :id, :name) do |b| %>
  <%# b.label(class: "check_box") { b.check_box(checked: true, class: "add_margin") + b.text } %>
  <%# end %>




  <%=f.label :bio, "Biography: " %><br>
  <%=f.text_area :bio%> 
  <br><br>
  <%=f.label :profile_pic, "Profile Picture(URL): " %> <br>
  <%=f.text_field :profile_pic%>
  <br><br>
  <button class="ui blue button">
  <%f.submit %>Submit!
  </button>
  <br><br>
      </div>
    </div>
  </div>
<%end%>
</center>