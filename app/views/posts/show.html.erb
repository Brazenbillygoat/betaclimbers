
<div class="post-show">
<%= render partial: "partials/navbar" %> 
<div class="flash-info-for-all-pages"><%= flash[:notice] %></div>

<center>
<div class="post-title-box">
<h1> <%=@post.subject%> </h1>
</div>
<div class="post-content-box">
<h5> <%=@post.content%> </h5> 
</div>
<br><br>
<div class="post-text-box">
<h3> Comments: </h3>
<br>
  <div class="comment-alignment">
    <% @post.comments.each do |comment| %> 
    <p>
    <%comment_time = comment[:created_at].strftime('%m/%d/%y %I:%M %p')%> 
      <%= comment_time %> : <%= comment.climber.username %> : <%= comment.message %>
    </p>
<%end%> 
</div>
<br><br>
<button class="ui white button">
<%= link_to "Add Comment", new_comment_path(post_id: @post.id) %> </button> 
</div>
<br><br>
    <button class="ui black button">
      <i class="trash alternate icon"></i>
      <%= link_to "Delete", post_delete_path(@post), { class: "post-show-remove-link" } %>
    </button>
<button class="ui black button">
<%= link_to "Edit Post", edit_post_path(@post)%>
</button>
<button class="ui black button">
<%= link_to "Back", community_path(@post.community.id)%> 
</button>

</center>

</div>
