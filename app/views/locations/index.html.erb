<!DOCTYPE html>
<html>
<body>

<%= render partial: "partials/navbar" %> 

<div class="location-index-body">
  <center>
  <h1 style="font-size:45px">Locations</h1>
  <br>
  <div class="location-index-list">
  
    <% @locations.each do |location| %>
      <a href="/locations/<%= location.id %>" class="location-index-link">
      <img src="<%= location.picture %>" class="location-index-img" alt="A picture of the location <%= location.name %>" height="50%" width="50%">
      <br>
      <%= location.name %>
      </a>
      <br>
      <br>
    <% end %>
  

    <br>
    <br>
    <button class="ui white button">
    <%= link_to "Add a New Location", new_location_path, method: "get" %>
    </button>
    </div>
</div>

</body>
</html>
